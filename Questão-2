      text-align: center;
      width: 320px;
    }

    .display {
      background-color: #1e1e1e;
      color: white;
      font-size: 24px;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
      min-height: 50px;
      text-align: right;
      box-shadow: inset 0 0 5px rgba(255, 255, 255, 0.2);
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    .button {
      border: none;
      border-radius: 50%;
      padding: 20px;
      font-size: 1.5rem;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .button.dark-gray {
      background-color: gray;
      color: white;
    }

    .button.orange {
      background-color: rgb(236, 137, 6);
      color: white;
    }

    .button.light-gray {
      background-color: rgb(248, 246, 246);
      color: black;
    }

    .button:hover {
      opacity: 0.8;
