<body>
  <main>
    <div class="title">Calculadora - IMC</div>

    <div class="input">
      <label for="nome">Nome:</label>
      <input type="text" id="nome" placeholder="Digite seu nome">
    </div>

    <div class="input">
      <label for="altura">Altura (em metros):</label>
      <input type="number" id="altura" step="0.01" placeholder="Ex: 1.75">
    </div>

    <div class="input">
      <label for="peso">Peso (em kg):</label>
      <input type="number" id="peso" step="0.1" placeholder="Ex: 70.5">
    </div>

    <button id="calcular">Calcular</button>

    <div class="result" id="resultado"></div>
  </main>

  <script>
    const calcular = document.getElementById("calcular");

    function obterClassificacao(imc) {
      if (imc < 18.5) return "abaixo do peso.";
      else if (imc < 25) return "com peso ideal. Parabéns!";
      else if (imc < 30) return "levemente acima do peso.";
      else if (imc < 35) return "com obesidade grau 1.";
      else if (imc < 40) return "com obesidade grau 2 (severa).";
      else return "com obesidade grau 3 (mórbida).";
    }

    function calcularIMC(peso, altura) {
      return (peso / (altura * altura)).toFixed(1);
    }

    function imc() {
      const nome = document.getElementById("nome").value;
      const altura = parseFloat(document.getElementById("altura").value);
      const peso = parseFloat(document.getElementById("peso").value);
      const resultado = document.getElementById("resultado");

      if (nome && altura && peso) {
        const valorIMC = calcularIMC(peso, altura);
        const classificacao = obterClassificacao(valorIMC);
        resultado.textContent = `${nome}, seu IMC é ${valorIMC} e você está ${classificacao}`;
      } else {
        resultado.textContent = "Por favor, preencha todos os campos!";
      }
    }

    calcular.addEventListener("click", imc);
  </script>
</body>
